@using Microsoft.AspNetCore.Mvc.TagHelpers
@model MagicVilla_Web.Models.VM.VillaNumberUpdateVM
<form asp-action="UpdateVillaNumber">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Create Villa</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-2">
                <label hidden asp-for="@Model.VillaNumber.VillaNo" class="control-label pt-2" style="fony-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input hidden asp-for="@Model.VillaNumber.VillaNo" class="form-control" />
                <span hidden asp-validation-for="@Model.VillaNumber.VillaNo" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="@Model.VillaNumber.VillaID" class="control-label pt-2" style="fony-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">

                <select asp-for="@Model.VillaNumber.VillaID" asp-items="@Model.VillaList" class="form-select border-0 shadow">
                    <option disabled selected>--Select Villa--</option>
                </select>

                <span asp-validation-for="@Model.VillaNumber.VillaID" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="@Model.VillaNumber.SpecialDetails" class="control-label pt-2" style="fony-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="@Model.VillaNumber.SpecialDetails" class="form-control"> </textarea>
                <span asp-validation-for="@Model.VillaNumber.SpecialDetails" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">
                <input type="submit" value="Update" class="btn btn-success form-control" />
            </div>
            <div class="col-5 ">
                <a asp-action="IndexVillaNumber" asp-controller="VillaNumber" class="btn-primary btn form-control">Back To List</a>
            </div>

        </div>
    </div>
</form>

@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}